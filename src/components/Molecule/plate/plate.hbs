<div class='wrap'>
  <div class='section'>
    <div class="{{class}}_lay">
      <div class="{{class}}_org {{ variation }}">

        {{!-- Title --}}
        <div class="{{class}}_mol titleArea">
          <h{{ head }} class="{{class}}_title">
            {{dummyTitle}}
          </h{{ head }}>
        </div>

        {{!-- Text --}}
        <div class="{{class}}_mol textArea">
          <p class="{{class}}_text">
            {{dummyText}}
          </p>
        </div>

        {{!-- BUtton --}}
        <div class="{{class}}_mol buttonArea {{ buttonPosition}}" style="display:{{ display }}">
          <button class='btn success normal'>
            <a href='#' class='btnSize-sm'>
              {{button}}
            </a>
          </button>
        </div>

      </div>
    </div>
  </div>
</div>